<body>
    <div class="container">
        <h1>Fitness App</h1>
        <!-- changed action attribute and added an id and js file instead-->
        <!-- <form action="/submit" method="post"></form>   -->
        <form id="workout-form">
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date">
                <label for="exercise">Exercise:</label>
                <input type="text" id="exercise" name="exercise" placeholder="Enter exercise">
                <label for="reps">Reps:</label>
                <input type="number" id="reps" name="reps" placeholder="Enter reps">
                <label for="weight">Weight (lbs):</label>
                <input type="number" id="weight" name="weight" placeholder="Enter weight">
            </div>
            <div class="form-group">
                <label for="supplement">Supplement:</label>
                <input type="text" id="supplement" name="supplement" placeholder="Enter supplement">
                <label for="dosage">Dosage:</label>
                <input type="text" id="dosage" name="dosage" placeholder="Enter dosage">
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
    <!-- js file responsible for handling the form submission -->
    <script src="/js/formHandler.js"></script>
</body>