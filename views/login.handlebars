<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FitTrack</title>
  <!-- Include your CSS file here -->
  <link rel="stylesheet" type="text/css" href="../public/css/style.css">
</head>
<body>
  <div class="row justify-space-between-md">
    <div class="login-card">
      <h2 class="page-title">Login</h2>
      <form id="login-form" class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit" id="login-btn">login</button>
        </div>
      </form>
    </div>
    <div class="login-card">
      <h2 class="page-title">Signup</h2>
      <form id="signup-form" class="form signup-form">
        <div class="form-group">
          <label for="username-signup">Username:</label>
          <input class="form-input" type="text" id="username-signup" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit" id="signup-btn">signup</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Include your JavaScript file here -->
  <script src="../public/js/login.js"></script>

</body>
</html>
