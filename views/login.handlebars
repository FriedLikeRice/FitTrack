<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FitTrack</title>
  <!-- CSS file with correct pathway -->
  <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>
  <div class="row justify-space-between-md">
    <div class="login-card">
      <h2 class="page-title">Login</h2>
      <form id="login-form" class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-input" type="email" id="email-login" name="email" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-input" type="password" id="password-login" name="password" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit" id="login-btn">login</button>
        </div>
      </form>
    </div>
    <div class="login-card">
      <h2 class="page-title">Signup</h2>
      <form id="signup-form" class="form signup-form">
        <div class="form-group">
          <label for="username-signup">Username:</label>
          <input class="form-input" type="text" id="username-signup" name="username" />
        </div>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="email" id="email-signup" name="email" />
        </div>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" name="password" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit" id="signup-btn">signup</button>
        </div>
      </form>
    </div>
  </div>

  <!-- JavaScript files with correct pathways-->
  <script src="/js/login.js"></script>
  <script src="/js/signup.js"></script>
</body>

</html>